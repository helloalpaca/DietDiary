<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Palette1Color4</item>
        <item name="actionMenuTextColor">@color/Palette1Color3</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:fontFamily">@font/ridibatang</item>
        <item name="android:textViewStyle">@style/RidiTextView</item>
        <item name="android:buttonStyle">@style/RidiButton</item>
    </style>

    <style name="MovieDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:textViewStyle">@style/RidiTextView</item>
        <item name="android:buttonStyle">@style/RidiButton</item>
    </style>


    <style name="RidiTextView" parent="android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/ridibatang</item>
    </style>
    <style name="RidiButton" parent="android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/ridibatang</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/RidiTextView</item>
        <item name="android:buttonStyle">@style/RidiButton</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
