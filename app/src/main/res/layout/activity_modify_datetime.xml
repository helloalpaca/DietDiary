<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="400dp"
    tools:context=".ModifyDatetime"
    android:orientation="vertical">

    <TextView
        android:id="@+id/datetime_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="text"/>

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/datetime_txt"
        android:gravity="center">

        <Button
            android:id="@+id/datetime_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/datetime_txt"
            android:text="날짜"/>

        <Button
            android:id="@+id/datetime_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시간"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearlayout"
        android:layout_above="@id/datetime_btn3"/>

    <Button
        android:id="@+id/datetime_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="변경"
        android:onClick="onClickButtonModifyDate"/>

</RelativeLayout>